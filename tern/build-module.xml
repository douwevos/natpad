<project name="build-tern" default="module-build">

	<property name="module-name" value="tern"/>


	<cc-config id="lib-set-tern">
		<cc-config refid="module.gtk3.config"/>
		<cc-config refid="module.caterpillar.config"/>
		<cc-config refid="module.shoveler.config"/>
		<cc-config refid="module.worm.config"/>
		<cc-config refid="module.cow.config"/>
		<cc-config refid="module.leafhopper.config"/>
		<cc-config refid="module.chameleon.config"/>
		<cc-config refid="module.dragonfly.config"/>
		<cc-config refid="module.moose.config"/>
		<cc-config refid="module.moose.explorer.config"/>
		<cc-config refid="module.viper.config"/>
		<cc-config refid="module.viper.explorer.config"/>
		<cc-config refid="module.elk.config"/>
	</cc-config>
	
	

	<cc-config id="lib-set-ut-tern">
		<cc-config refid="module.gtk3.config"/>
		<cc-config refid="module.ut.caterpillar.config"/>
		<cc-config refid="module.ut.shoveler.config"/>
		<cc-config refid="module.ut.worm.config"/>
		<cc-config refid="module.ut.cow.config"/>
		<cc-config refid="module.ut.leafhopper.config"/>
		<cc-config refid="module.ut.dragonfly.config"/>
		<cc-config refid="module.ut.chameleon.config"/>
		<cc-config refid="module.ut.moose.config"/>
		<cc-config refid="module.ut.moose.explorer.config"/>
		<cc-config refid="module.ut.viper.config"/>
		<cc-config refid="module.ut.viper.explorer.config"/>
		<cc-config refid="module.ut.elk.config"/>
	</cc-config>
		
	<import file="${natpad.build}/module.inc" optional="false"/>

	<target name="convert-glade">
		<xml-to-hinclude file="src/preferences/ui/tergladeprefsmain.glade"/>
		<xml-to-hinclude file="src/preferences/ui/tergladeprefsclazz.glade"/>
	</target>
	
	<target name="module-compile" depends="convert-glade">
		<antcall target="module.module-compile"/>
	</target>

	<target name="module-ut-compile" depends="convert-glade">
		<antcall target="module.module-ut-compile"/>
	</target>


</project>
