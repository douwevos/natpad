module {

	name 'jaguar-decompiler';
	
	dependencies {
		module 'glib';	
		module 'caterpillar';
		module 'jaguar-bytecode';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc { src { path './src/'; }  destdir './compiled/'; depdir 'deps'; }
		
	}

	package {
		ar { srcdir './compiled/'; destfile './libjaguardecompiler.a'; }
	}	


	export {
		lib {
			path '.';
			libname 'jaguardecompiler';
		}
		headers {
			dir './src/';
		}
	}


}
