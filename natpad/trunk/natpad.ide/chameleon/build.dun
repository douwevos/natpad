module {

	name 'chameleon';
	
	dependencies {
		module 'gtk3';
		module 'worm';
		module 'guess';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc {
			natpad.cc.args {}
			src { path './src/'; }  
			destdir './compiled/'; 
			depdir './deps/'; 
		}
		
	}

	package {
		ar { srcdir './compiled/'; destfile './libchameleon.a'; }
	}	


	export {
		lib {
			path '.';
			libname 'chameleon';
		}
		headers {
			dir './src/';
		}
	}


}