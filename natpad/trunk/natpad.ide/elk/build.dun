module {

	name 'elk';
	
	dependencies {
		module 'codeparsing';
		module 'moose-explorer';
		module 'dragonfly';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc {
			natpad.cc.args {}
			src { path './src/'; }  
			destdir './compiled/'; 
			depdir './deps/';
		}
	}

	package {
		ar { srcdir './compiled/'; destfile './libelk.a'; }
	}	


	export {
		lib {
			path '.';
			libname 'elk';
			reference 'elk.export.libs';
		}
		headers {
			dir './src/';
		}
	}


}