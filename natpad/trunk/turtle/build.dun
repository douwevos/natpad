module {

	name 'turtle';
	
	dependencies {
		module 'caterpillar';
		module 'gtk3';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc { 
			src { path './src/'; }  
			destdir './compiled/'; 
			depdir 'deps';
		}
		
	}

	package {
		ar { srcdir './compiled/'; destfile './libturtle.a'; }
	}	


	export {
		lib {
			path '.';
			libname 'turtle';
		}
		headers {
			dir './src/';
		}
	}


}
