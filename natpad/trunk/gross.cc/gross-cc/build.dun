module {

	name 'gross-cc';
	
	klm  '[%=module.directory%]';
	
	dependencies {
		module 'gross-java-runtime';
	}

	clear {
		remove '[%=module.builddir%]';
	}
	
	compile {
		javac { 
			src { path './src/main/'; }
			src { path './src/generated/'; }
			destdir './compiled/';
		}
	}

	package {
	
		echo '[%klm%]';
	
		jar { 
			in { 
				path './compiled/';
			}
			destfile './gross-cc.jar';
		}
	}	


	export {
		lib {
			path './gross-cc.jar';
		}
	}


}