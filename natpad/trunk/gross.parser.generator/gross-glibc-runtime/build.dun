module {

	name 'gross-glibc-runtime';
	
	dependencies {
		module 'caterpillar';
		module 'gobject';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc { 
			natpad.cc.args {}
			src { path './src/'; } 
			depdir 'deps';
			destdir './compiled/'; 
		}
	}

	package {
		ar { 
			srcdir './compiled/'; 
			destfile './libgross-glibc-runtime.a';
		}
	}	


	export {
		lib {
			path '.';
			libname 'gross-glibc-runtime';
		}
		headers {
			dir './src/';
		}
	}

}
