<project name="build-natpad" default="module-build">

	<property name="module-name" value="natpad"/>

	<cc-config id="lib-set-natpad">
		<cc-config refid="module.jordanella.config"/>
		<cc-config refid="module.mule.config"/>
		<cc-config refid="module.tern.config"/>
		<cc-config refid="module.jaguar.config"/>
		<cc-config refid="module.jaguar.decompiler.config"/>
		<cc-config refid="module.jaguar.bytecode.config"/>
		<cc-config refid="module.cheetah.config"/>
		<cc-config refid="module.elk.config"/>
		<cc-config refid="module.moose.explorer.config"/>
		<cc-config refid="module.moose.config"/>
		<cc-config refid="module.viper.config"/>
		<cc-config refid="module.dragonfly.config"/>
		<cc-config refid="module.leafhopper.config"/>
		<cc-config refid="module.cow.config"/>
		<cc-config refid="module.worm.config"/>
		<cc-config refid="module.shoveler.config"/>
		<cc-config refid="module.chameleon.config"/>
		<cc-config refid="module.caterpillar.config"/>
		<cc-config refid="module.codeparsing.config"/>
		<cc-config refid="module.gvlib.config"/>
		<cc-config refid="module.gtk3.config"/>
	</cc-config>



	<cc-config id="lib-set-ut-natpad">
		<cc-config refid="module.ut.jordanella.config"/>
		<cc-config refid="module.ut.mule.config"/>
		<cc-config refid="module.ut.tern.config"/>
		<cc-config refid="module.ut.jaguar.config"/>
		<cc-config refid="module.ut.jaguar.decompiler.config"/>
		<cc-config refid="module.ut.jaguar.bytecode.config"/>
		<cc-config refid="module.ut.cheetah.config"/>
		<cc-config refid="module.ut.elk.config"/>
		<cc-config refid="module.ut.moose.explorer.config"/>
		<cc-config refid="module.ut.moose.config"/>
		<cc-config refid="module.ut.viper.config"/>
		<cc-config refid="module.ut.dragonfly.config"/>
		<cc-config refid="module.ut.leafhopper.config"/>
		<cc-config refid="module.ut.cow.config"/>
		<cc-config refid="module.ut.worm.config"/>
		<cc-config refid="module.ut.shoveler.config"/>
		<cc-config refid="module.ut.chameleon.config"/>
		<cc-config refid="module.ut.caterpillar.config"/>
		<cc-config refid="module.ut.codeparsing.config"/>
		<cc-config refid="module.ut.gvlib.config"/>
		<cc-config refid="module.gtk3.config"/>
	</cc-config>

	
	
	<import file="${natpad.build}/module.inc" optional="false"/>



	<target name="module-build" depends="module-compile, module-archive, module-link">
	</target>
	

			
	<target name="module-ut-build" depends="module-ut-compile, module-ut-archive">
		<clink srcdir="build/ut/main/" output="build/${module-name}-ut">
			<cc-config refid="module.ut.${module-name}.config"/>
			<cc-config refid="lib-set-ut-${module-name}"/>
			<cc-config refid="module.cc.dbg.config"/>
			<cc-strip-argument argument="-lrt"/>
			<!--cc-arg value="-rdynamic"/-->
		</clink>
	</target>
			

	<target name="clean">
		<delete dir="build"/>
	</target>

</project>


